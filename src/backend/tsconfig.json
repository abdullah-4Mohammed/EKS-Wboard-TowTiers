{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@common/*": [
        "src/common/*"
      ],
      "@config": [
        "config"
      ],
      "@model/*": [
        "src/model/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@providers/*": [
        "src/providers/*"
      ],
    },
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}